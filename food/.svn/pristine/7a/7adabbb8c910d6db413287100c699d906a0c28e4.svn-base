	<script>
		$(function () {

            //异步查询号库对接码和地区
            $(".quiz").change(function(){
                var opt_val = $('.quiz option:selected').val();

                $.post("<?php echo url('index/hkcz'); ?>",{"num":opt_val,"select":1},function(e){
                    if(e.status == 2)
                    {
                        $("#docking_code").val(e.data['docking_code']);
                        $("#region").val(e.data['region']);
                    }
                },"JSON");
            });
			$('#register_btn').on('click', function() {
				$('.inputWrap').show();
				$('.main-details').hide();
			}); 

			//点击返回关闭
			$('#back_btn').on('click', function() {
				$('.inputWrap').hide();
				$('.main-details').show();
			});


			//ajax提交
			$('#register_form_btn').on('click', function() {
				var el = $('#register_form .input');
				var array = ['库号','对接码','号卡归属地','扫码数量','注册成功数','单价'];
				for (var i = 0; i < el.length; i++ ) {
					if (el.eq(i).val() == "") {
						layer.msg('请填写'+array[i]+'内容');
						return false;
					}
				}

				var url = "<?php echo url('index/zc'); ?>";
				var data = $('#register_form').serialize();
				
				$.post(url, data, function(result) {
					if (result.status == 1) {
						layer.msg('新增成功');
                        window.location.reload();
					//	window.localhost = url; //跳转链接
					} else if (result.status == 0) {
						layer.msg('新增失败');
					}
				},'JSON');
			});
		});
	</script>
