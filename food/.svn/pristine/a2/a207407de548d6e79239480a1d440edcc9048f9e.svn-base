	<!--主要内容-->
	<div class="layui-body site-demo">
		<!--tab标签-->
		<div class="layui-main">
			<blockquote class="layui-elem-quote">
 				<a class="layui-btn" href="main-kc-hp-l.html">订单详情</a>
			</blockquote>
			<form class="layui-form layui-form-pane" action="">
				<div class="layui-form-item">
					<label class="layui-form-label">订货人</label>
					<div class="layui-input-inline">
						<input type="text" name="title" placeholder="请输入订货人" class="layui-input">
					</div>
				</div>
				<div class="layui-form-item">
					<label class="layui-form-label">电话</label>
					<div class="layui-input-inline">
						<input type="text" name="username" lay-verify="required" placeholder="请输入电话" class="layui-input">
					</div>
				</div>
				<div class="layui-form-item">
					<div class="layui-inline">
						<label class="layui-form-label">账期（天）</label>
						<div class="layui-input-block">
							<input type="text" name="date" id="date1" class="layui-input" lay-key="2" placeholder="请输入电话账期（天）">
						</div>
					</div>
				</div>
				<div class="layui-form-item">
					<label class="layui-form-label">地址</label>
					<div class="layui-input-block">
						<input type="text" name="text" placeholder="请输入电话账期地址" autocomplete="off" class="layui-input">
					</div>
				</div>
				<div class="layui-tab-item layui-show layui-tab-item-xzdd">
					<table class="layui-table layui-table-w">
						<thead>
							<tr>
								<th class="w">排序</th>
								<th>品名</th>
								<th>袋数</th>
								<th>渠道</th>
								<th>单价</th>
								<th>金额</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>1</td>
								<td>
									<div class="layui-form-item">
										<div class="layui-input-block">
											<select name="parentid" lay-verify="required">
												<option value="0">尚品牛肉100g麻辣味1</option>
												<option value="10">尚品牛肉100g麻辣味2</option>
												<option value="8">尚品牛肉100g麻辣味3</option>
												<option value="11">尚品牛肉100g麻辣味4</option>	
											</select>
											<div class="layui-unselect layui-form-select">
												<div class="layui-select-title">
													<input type="text" placeholder="尚品牛肉100g麻辣味1" value="" readonly="" class="layui-input layui-unselect"><i class="layui-edge"></i>
												</div>
												<dl class="layui-anim layui-anim-upbit">
													<dd lay-value="0" class="layui-this">尚品牛肉100g麻辣味1</dd>
													<dd lay-value="10" class="">尚品牛肉100g麻辣味2</dd>
													<dd lay-value="8" class="">尚品牛肉100g麻辣味3</dd>
													<dd lay-value="11" class="">尚品牛肉100g麻辣味4</dd>
												</dl>
											</div>
										</div>
									</div>
								</td>
								<td>3</td>
								<td>
									<div class="layui-form-item layui-form-item-1">
										<div class="layui-input-block">
											<select name="parentid" lay-verify="required">
												<option value="0">流通</option>
												<option value="10">一级微商</option>
												<option value="8">二级微商</option>
												<option value="11">三级微商</option>	
											</select>
											<div class="layui-unselect layui-form-select">
												<div class="layui-select-title">
													<input type="text" placeholder="尚品牛肉100g麻辣味1" value="" readonly="" class="layui-input layui-unselect"><i class="layui-edge"></i>
												</div>
												<dl class="layui-anim layui-anim-upbit">
													<dd lay-value="0" class="layui-this">流通</dd>
													<dd lay-value="10" class="">一级微商</dd>
													<dd lay-value="8" class="">二级微商</dd>
													<dd lay-value="11" class="">三级微商</dd>
												</dl>
											</div>
										</div>
									</div>
								</td>
								<td>0</td>
								<td>0</td>
							</tr> 						
						</tbody>
					</table>
				</div>
				<div class="layui-form-item">
					<button class="layui-btn" lay-submit="" lay-filter="demo2">下单</button>
					<button class="layui-btn" lay-submit="" lay-filter="demo2">取消</button>
				</div>
