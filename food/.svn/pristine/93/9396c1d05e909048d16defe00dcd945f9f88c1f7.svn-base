							<tr>
								<th class="w">排序</th>
								<th>品名</th>
								<th class="s">套数</th>
								<th>正品</th>
								<th>试吃</th>
								<th>成本金额</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>1</td>
								<td>
									<div class="layui-form-item">
										<div class="layui-input-block">
											<select name="parentid" lay-verify="required">
												<option value="0">尚品牛肉100g麻辣味1</option>
												<option value="10">尚品牛肉100g麻辣味2</option>
												<option value="8">尚品牛肉100g麻辣味3</option>
												<option value="11">尚品牛肉100g麻辣味4</option>	
											</select>
										</div>
									</div>
								</td>
								<td>
									<input type="number" name="title" value="" class="layui-input">
								</td>
								<td>0</td>
								<td>0</td>
								<td>0</td>
							</tr> 		
							<tr>
								<td>2</td>
								<td>
									<div class="layui-form-item">
										<div class="layui-input-block">
											<select name="parentid" lay-verify="required">
												<option value="0">尚品牛肉100g麻辣味1</option>
												<option value="10">尚品牛肉100g麻辣味2</option>
												<option value="8">尚品牛肉100g麻辣味3</option>
												<option value="11">尚品牛肉100g麻辣味4</option>	
											</select>
										</div>
									</div>
								</td>
								<td>
									<input type="number" name="title" value="" class="layui-input">
								</td>
								<td>0</td>
								<td>0</td>
								<td>0</td>
							</tr> 				
							<tr>
								<td>3</td>
								<td>
									<div class="layui-form-item">
										<div class="layui-input-block">
											<select name="parentid" lay-verify="required">
												<option value="0">尚品牛肉100g麻辣味1</option>
												<option value="10">尚品牛肉100g麻辣味2</option>
												<option value="8">尚品牛肉100g麻辣味3</option>
												<option value="11">尚品牛肉100g麻辣味4</option>	
											</select>
										</div>
									</div>
								</td>
								<td>
									<input type="number" name="title" value="" class="layui-input">
								</td>
								<td>0</td>
								<td>0</td>
								<td>0</td>
							</tr> 								
						</tbody>
					</table>
				</div>
				<div class="layui-form-item">
					<button class="layui-btn" lay-submit="" lay-filter="demo2">下单</button>
					<button class="layui-btn" lay-submit="" lay-filter="demo2">取消</button>
				</div>
			</form>
		</div>
	</div>
	<!--主要内容 end-->
	{include file="public/footer"/}
</div>
