	<script>
		$(function() {
			$('#yan_search_btn').click(function() {
			    var data = $('#yan_search_form').serializeArray();
			    postData = {};
			    $(data).each(function(i) {
			      postData[this.name] = this.value;
			    });

			    var url = '';
			    console.log(postData);
			    $.post(url, postData, function(result) {
			      if(result.status == 1) {
			        layer.msg('');
			        setTimeout(function () {
			          window.location.href = '';
			        }, 1000);
			      }
			      if(result.status == 0) {
			        layer.msg('');
			      }
			    }, 'JSON');
			  });
		});
	</script>
