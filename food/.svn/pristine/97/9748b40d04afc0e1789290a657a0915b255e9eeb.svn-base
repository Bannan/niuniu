						</tr> 
						<tr>
							<td>1</td>
							<td>尚品麻辣100g麻辣味</td>
							<td>3</td>
							<td>流通</td>
							<td>0</td>
							<td>0</td>
						</tr>
						
					</tbody>
				</table>
			</div>
			<div class="layui-form-item">
				<button class="layui-btn" lay-submit="" lay-filter="demo2">返回</button>
				<button class="layui-btn" lay-submit="" lay-filter="demo2">已收款</button>
			</div>
		</div>
