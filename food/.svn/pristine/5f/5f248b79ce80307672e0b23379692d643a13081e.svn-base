				  <legend>结算</legend>
				</fieldset>
				<div class="layui-form-item">

					<button class="layui-btn" id="add_table_place_order" type="button"><?php echo !empty($edit) ? "修改订单" : "生成订单";?></button>

					<button class="layui-btn" id="add_table_cancel_btn" type="button">取消</button>
