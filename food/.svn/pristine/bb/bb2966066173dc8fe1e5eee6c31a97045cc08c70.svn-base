<body>
<div class="layui-layout layui-layout-admin">
	{include file="public/head"/}
	{include file="public/nav"/}
	<!--主要内容-->
	<div class="layui-body site-demo webWrap">
		<!--tab标签-->
		<div class="layui-main">
			<blockquote class="layui-elem-quote">
 				<a class="layui-btn" href="javascript:;">价格体系</a>
			</blockquote>
			<div class="layui-form">
				<div class="layui-form-item layui-form-item-jgtx">
					<div class="layui-input-block">
						<select name="parentid" lay-verify="required">
							<option value="0">流通</option>
							<option value="1">三级微商</option>
							<option value="2">二级微商</option>
							<option value="3">一级微商</option>
							<option value="4">商超</option>		
							<option value="5">夜场</option>				
						</select>
						<div class="layui-unselect layui-form-select">
							<dl class="layui-anim layui-anim-upbit">
								<dd lay-value="0" class="layui-this">流通</dd>
								<dd lay-value="1" class="">三级微商</dd>
								<dd lay-value="2" class="">二级微商</dd>
								<dd lay-value="3" class="">一级微商</dd>
								<dd lay-value="4" class="">商超</dd>
								<dd lay-value="5" class="">夜场</dd>
							</dl>
						</div>
					</div>
					<a href="#" class="layui-btn">查看</a>
					<a href="{:url('finance/price_edit')}" class="layui-btn">编辑</a>
					<a href="{:url('finance/price_add')}" class="layui-btn">新增价格</a>
				</div>
			</div>
			<fieldset class="layui-elem-field layui-field-title">
			  <legend>流通</legend>
			</fieldset>
			<div class="layui-tab-item layui-show layui-tab-item-jgtx">
				<table class="layui-table layui-table-w">
					<thead>
						<tr>
							<th class="w">排序</th>
							<th>品名</th>
							<th>价格</th>
							<th>毛利</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>1</td>
							<td>尚品麻辣100g麻辣味</td>
							<td>8.6</td>
							<td>1.6</td>
						</tr> 
						<tr>
